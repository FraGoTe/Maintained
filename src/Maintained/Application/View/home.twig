{% extends 'layout.twig' %}

{% block content %}

    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <img class="img-responsive" src="/img/dude.png" alt="">
                    <div class="intro-text">
                        <span class="name">Is it maintained?</span>
                        <hr class="star-light">
                        <span class="skills">Check the activity of open source projects</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="check">
        <div class="container">

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Check a project</h2>
                    <hr class="star-primary">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <form id="search">
                        <div class="form-group input-group input-group-lg">
                            <input id="search-input" type="text" class="form-control" placeholder="user/repository">
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-success">Go</button>
                            </span>
                        </div>

                        <div class="alert alert-warning collapse">
                            You must enter a valid repository name (<code>user/repository</code>).
                        </div>

                        <div class="result well collapse">
                            <h4></h4>
                            <img src="">
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </section>

    <section class="success" id="metrics">
        <div class="container">

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Metrics</h2>
                    <hr class="star-light">
                </div>
            </div>

            <div class="row text-center">
                <div class="col-lg-4 col-lg-offset-2">
                    <h3>Resolution time</h3>
                    <p>
                        Median time needed to close an issue.
                    </p>
                </div>
                <div class="col-lg-4">
                    <h3>Closed percentage</h3>
                    <p>
                        Percentage of closed issues.
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <hr>
                </div>
            </div>

            <div class="row portfolio">
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="/project/symfony/symfony">
                            Symfony
                        </a>
                    </p>
                    {{ badge('symfony/symfony') }}
                </div>
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="/project/Ocramius/ProxyManager">
                            ProxyManager
                        </a>
                    </p>
                    {{ badge('Ocramius/ProxyManager') }}
                </div>
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="/project/Atlantic18/DoctrineExtensions">
                            DoctrineExtensions
                        </a>
                    </p>
                    {{ badge('Atlantic18/DoctrineExtensions') }}
                </div>

                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="/project/schmittjoh/serializer">
                            JMS serializer
                        </a>
                    </p>
                    {{ badge('schmittjoh/serializer') }}
                </div>
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="/project/PHPOffice/PHPExcel">
                            PHPExcel
                        </a>
                    </p>
                    {{ badge('PHPOffice/PHPExcel') }}
                </div>
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="/project/composer/composer">
                            Composer
                        </a>
                    </p>
                    {{ badge('composer/composer') }}
                </div>

                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="/project/Behat/Behat">
                            Behat
                        </a>
                    </p>
                    {{ badge('Behat/Behat') }}
                </div>
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="/project/kriswallsmith/assetic">
                            Assetic
                        </a>
                    </p>
                    {{ badge('kriswallsmith/assetic') }}
                </div>
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="/project/sebastianbergmann/phpunit">
                            PHPUnit
                        </a>
                    </p>
                    {{ badge('sebastianbergmann/phpunit') }}
                </div>
            </div>

        </div>
    </section>

    <section id="about">
        <div class="container">

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>About</h2>
                    <hr class="star-primary">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4 col-lg-offset-2">
                    <p>
                        Maintained is an open source project whose goal is to monitor open source projects.
                    </p>
                </div>
                <div class="col-lg-4">
                    <p>
                        Have you ever wondered whether or not to use a library, uncertain of how
                        well it is maintained?
                    </p>
                </div>
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <hr>
                    <a href="https://github.com/mnapoli/Maintained" class="btn btn-lg btn-default">
                        <i class="fa fa-github"></i> Fork on GitHub
                    </a>
                </div>
            </div>

        </div>
    </section>

{% endblock %}